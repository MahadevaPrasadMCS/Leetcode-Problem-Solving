class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        num = str(x)
        reversed_num = ""
        #Checking it is a negative and reversing
        if num[0] == '-':
            reversed_num = '-' + num[-1:0:-1]
        #Reversing positive number
        else:
            reversed_num = num[::-1]
        Conver reversed string to int
        n = int(reversed_num)
        if -2**31 <= n <= 2**31 - 1:
            return n
        else:
            return 0
